        <%- include ../list/modal_password.ejs %>

            <script>
                const rl = $("#roomlist").children("tbody");
                const acdiv = $('#activeRoom');
                const pwmodal = $('#passwordModal');
                var rooms = [];
                var aRoom = {};

                function getAllRooms() {
                    rooms = [];
                    $.get("/roomList", function (data, status) {
                        data.rooms.forEach((room) => {
                            room.players = room.jsonplayers.length;
                            rooms.push(room);
                            renderRoom(room);
                        });
                        if (data.active) {
                            aRoom = data.active;
                            renderActive(data.active);
                        }
                    });
                }

                function renderActive(room) {
                    acdiv[0].innerHTML = `<h4>${room.name}</h4><a type="button" class="btn btn-primary m-2" href="/room/${room.hashID}"><i class="bi bi-plus-lg text-white"></i>Reconnect</a>`;
                    acdiv.show();
                }


                function renderRoom(room) {
                    let target = $(`#${room.hashID}`);
                    if (room.empty) {
                        target.remove();
                        return 1;
                    }
                    let playerIcons = '';
                    for (let i = 0; i < room.players; i++) {
                        playerIcons += '<i class="bi bi-person-fill"></i>';
                    }
                    for (let i = 0; i < room.maxplayers - room.players; i++) {
                        playerIcons += '<i class="bi bi-person"></i>';
                    }
                    if (target.length) {
                        target.children(".rpl").html(playerIcons);
                    } else {
                        if (room.password) {
                            rl.append(`
                            <tr id="${room.hashID}" onclick="protected('${room.hashID}','${room.name}');">
                            <td class="rname">${room.name}</td>
                            <td class="rpl">` + playerIcons + `</td>
                            <td class="rpw"><i class="bi bi-x-square-fill"></i></td>
                            </tr>`);
                        } else {
                            rl.append(`
                            <tr id="${room.hashID}" onclick="window.location.href='/room/${room.hashID}';">
                            <td class="rname">${room.name}</td>
                            <td class="rpl">` + playerIcons + `</td>
                            <td class="rpw"><i class='bi bi-check-square-fill'></i></td>
                            </tr>`);
                        }
                    }
                }

                function protected(rhash, rname) {
                    $('#passwordModalLabel').html(`Password for ${rname}`);
                    $('#hiddenhash').val(rhash);
                    pwmodal.modal("show");
                }

                window.onload = function () {
                    acdiv.hide();
                    getAllRooms();
                };

                io.socket.on("listevent", function (data) {
                    renderRoom(data.room);
                    if (aRoom.hashID == data.room.hashID) {
                        acdiv[0].innerHTML = "";
                        acdiv.hide();
                    }
                });

                $('#pwForm').on('submit', function(e) {
                    e.preventDefault();
                    let hash = $('#hiddenhash').val();
                    $.ajax({
                        type: "POST",
                        url: "/protect",
                        data: { hash: hash, passwd: $('#passwd').val() },
                        statusCode: {
                            403: function (err) {
                                $('#pwerr').html(err.responseJSON.err.msg);
                            }
                        },
                        success: function (data) {
                            window.location.href = `/room/${hash}`;
                        }
                    });
                })

            </script>