<% if (errmsg) { %>
    <div class="modal fade" id="errModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content modal-dark">
                <div class="modal-header">
                    <h5 class="modal-title text-white"><i class="bi bi-exclamation-diamond-fill text-danger"></i> Error</h5>
                    <button type="button" class="btn btn-danger close" onclick="$('#errModal').modal('hide')">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="errmsg" class="mb-1 text-white">
                        <%= errmsg %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>