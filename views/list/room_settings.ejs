<h2>Settings</h2>
<hr class="mt-0">
<div class="m-3">
    <form method="POST" id="createRoomForm" action="/create">
        <div class="card card-light-transparent mb-3">
            <div class="input-group m-3">
                <div class="input-group-prepend">
                    <span class="input-group-text col-inverse" id="ba1">Room Name</span>
                </div>
                <input type="text" id="roomName" name="roomname" class="input-transparent" required autocomplete="off" aria-label="Room Name" aria-describedby="ba1" value="<%= roomname %>">
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card card-light-transparent mb-3">
                    <div class="input-group m-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text col-inverse" for="playerSelect">Players</label>
                        </div>
                        <select class="custom-select" name="maxplayers" id="playerSelect">
                            <option selected>Choose...</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                            <option value="4">Four</option>
                            <option value="6">Six</option>
                        </select>
                    </div>

                </div>
            </div>
            <div class="col">
                <div class="card card-light-transparent mb-3 p-1 pb-2">
                    <div class="form-check m-3">
                        <input class="form-check-input" type="checkbox" name="score" checked>
                        <label class="form-check-label" style="float: left;">
                            Show Scores
                        </label>
                    </div>
