        <div class="card card-light-transparent mb-3">
            <div class="row m-3">
                <div class="col form-check my-2">
                    <input class="form-check-input" type="checkbox" name="pwcb" value="1" id="flexCheckPw" onclick="$('#pwfield').toggle('hidden');">
                    <label class="form-check-label" style="float: left;" for="flexCheckPw">
                        Private Game
                    </label>
                </div>
                <div id="pwfield" class="col">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text col-inverse">Password</span>
                        </div>
                        <input type="password" class="form-control input-transparent" name="passwd" placeholder="password" aria-label="Password">
                    </div>
                </div>
            </div>

        </div>
        <button type="button" class="btn btn-primary" onclick="$('#createRoomForm').submit();">Create Room</button>
