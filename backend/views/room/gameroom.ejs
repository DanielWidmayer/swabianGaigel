<div class="m-5">
    <div class="row">
        <div class="col-8">
            <div class="card fieldcontainer p-3">
                <img class="preload" src="/images/cards.png" />
                <div id="card-table">

                </div>

                <footer>
                    <p>room#<%= hash %>></p> <button class="btn btn-secondary" type="button" id="bleave">Leave</button>
                    <button class="btn btn-secondary" type="button" id="bstart">Start</button>

                </footer>
            </div>
        </div>
        <div class="col-4">
            <div class="card mb-3">
                <div id="game-history">
                    <h3 class="p-2">Spielverlauf</h3>
                    <%- include roomparts/userlist.ejs %>
                </div>
            </div>

            <div class="card">
                <div id="chat">
                    <h3 class="p-2">Chat</h3>
                    <%- include roomparts/chatfield.ejs %>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    const bleave = $('#bleave');
    const bstart = $('#bstart');
    const hash = window.location.href.split('/').pop();

    io.socket.post('/socketconnect', function (res, jres) {
        if (jres.statusCode != 200) {
            console.log(res);
        } else {
            console.log("ok");
        }
    })

    bleave.click(socketleave);
    bstart.click(startGame);

    function socketleave() {
        io.socket.delete('/leave', function (res, jres) {
            if (jres.statusCode != 200) {
                console.log(res);
            } else {
                window.location.href = '/list';
            }
        })
    }

    function startGame() {
        io.socket.post('/startGame', function (res, jres) {
            if (jres.statusCode != 200) {
                console.log(res);
            } else {
                console.log("game started");
                bstart.hide();
            }
        })
    }

    // onunload event could be used to make the user leave without button, but would also cause him to leave on refresh
</script>